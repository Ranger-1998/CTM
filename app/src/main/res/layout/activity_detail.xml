<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bar"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/login_car_bg" />
        <ImageView
            android:id="@+id/btn_back"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        
        <TextView
            android:layout_toRightOf="@id/btn_back"
            android:textColor="@color/black2"
            android:text="@string/detail"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/btn_more"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <ImageView
            android:id="@+id/btn_collect"
            android:src="@drawable/ic_star_border_black_24dp"
            android:layout_toLeftOf="@id/btn_more"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_user"
        android:layout_below="@id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_head"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/portrait"
            app:civ_border_color="@color/colorGray"
            app:civ_border_width="1dp"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        
        <TextView
            android:id="@+id/tv_name"
            android:textSize="14sp"
            android:textColor="@color/darkgreen"
            android:layout_toRightOf="@id/img_head"
            android:layout_alignTop="@id/img_head"
            android:layout_marginLeft="10dp"
            android:text="TomCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_time"
            android:textSize="12sp"
            android:textColor="@color/black2"
            android:layout_alignLeft="@id/tv_name"
            android:layout_alignBottom="@id/img_head"
            android:text="发布与2018/5/20 10:53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_below="@id/img_head"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/login_car_bg" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@id/rl_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp">
            <TextView
                android:id="@+id/tv_detail_content"
                android:minHeight="120dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:text="测试测试测试测试测试测试测试测试测试测试测试测试"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rl_detail_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chat_white_24dp"
        android:tint="#ffffff"
        android:clickable="true"
        app:backgroundTint="@color/darkgreen"
        app:rippleColor="@color/mediumseagreen"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:elevation="6dp" />
    
</RelativeLayout>