<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel_tool"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_no_trim"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:text="发布"
                android:layout_toRightOf="@id/iv_cancel"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_publish"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="发布"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_rectangle_border"
                android:layout_marginRight="20dp"/>

            <View
                android:layout_alignParentBottom="true"
                android:background="@color/black"
                android:alpha="0.1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <EditText
            android:layout_marginTop="@dimen/dp_10"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:id="@+id/edit_title"
            android:hint="标题"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/choose_time"
            android:layout_below="@id/rel_tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_cate"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/edit_title"
            android:layout_alignBottom="@id/edit_title"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择分类"/>

            <ImageView
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_action_arrow_down"
                android:layout_gravity="center_vertical"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/choose_time"
            android:text="选择失效时间"
            android:gravity="center"
            android:layout_alignTop="@id/edit_title"
            android:layout_alignBottom="@id/edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ll_cate"
            android:layout_marginRight="@dimen/dp_10"/>


        <EditText
            android:hint="正文"
            android:textSize="16sp"
            android:gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/edit_content"
            android:minHeight="300dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_title"
            android:background="@null"/>

        <LinearLayout
            android:id="@+id/ll_add_img"
            android:orientation="vertical"
            android:background="@color/gainsboro"
            android:layout_below="@id/edit_content"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_marginStart="20dp">

            <ImageView
                android:src="@drawable/ic_add_no_trim"
                android:layout_width="36dp"
                android:layout_height="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加图片"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_images_first"
            android:layout_toRightOf="@id/ll_add_img"
            android:layout_alignTop="@id/ll_add_img"
            android:layout_alignBottom="@id/ll_add_img"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ll_add_img">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_images_second"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/ll_add_img"
            >

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>