<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@color/colorPrimary"
    android:layout_marginTop="3dp"
    android:paddingTop="2dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <ImageView
        android:id="@+id/img_pic"
        android:src="@drawable/myres_pic"
        android:scaleType="fitEnd"
        android:layout_alignParentRight="true"
        android:layout_width="110dp"
        android:layout_height="74dp" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/img_pic"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:text="任天堂港版SWITCH,9.9成新"
            android:textColor="@color/black"
            android:alpha="0.8"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_content"
            android:text="今年4月份买的上手不超过10小时，塞尔达实体卡，今年4月份买的上手不超过10小时，塞尔达实体卡，今年4月份买的上手不超过10小时，塞尔达实体卡，今年4月份买的上手不超过10小时，塞尔达实体卡，今年4月份买的上手不超过10小时，塞尔达实体卡，今年4月份买的上手不超过10小时，塞尔达实体卡，"
            android:textColor="@color/gray"
            android:textSize="11sp"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"/>
    </LinearLayout>



    <View
        android:id="@+id/view_line"
        android:layout_below="@id/ll_content"
        android:layout_marginTop="8dp"
        android:background="@color/login_car_bg"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_below="@id/view_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/btn_del"
            android:gravity="center"
            android:background="@drawable/shape_btn_del"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text="@string/del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_solve"
            android:gravity="center"
            android:background="@drawable/shape_btn_solve"
            android:layout_toLeftOf="@id/btn_del"
            android:layout_marginRight="8dp"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_solve"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text="@string/solve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_toLeftOf="@id/btn_solve"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_time"
                android:gravity="center_vertical"
                android:text="发布于 2018/6/25 14:50"
                android:textSize="11sp"
                android:textColor="@color/gray"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="match_parent" />

        </LinearLayout>
    </RelativeLayout>




</RelativeLayout>